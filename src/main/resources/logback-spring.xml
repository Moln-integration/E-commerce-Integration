<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- console pattern with request/user metadata (from MDC) -->
    <property name="PATTERN"
              value="%d{yyyy-MM-dd'T'HH:mm:ss.SSSXXX} %-5level [%X{reqId}] user=%X{userEmail:-anon} ip=%X{ip:-} %logger{36} - %msg%n"/>

    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${PATTERN}</pattern>
        </encoder>
    </appender>

    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
    </root>
</configuration>
